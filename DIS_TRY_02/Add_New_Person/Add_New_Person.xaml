<Window x:Class="DIS_TRY_02.Add_New_Person.Add_New_Person"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DIS_TRY_02.Add_New_Person"
        mc:Ignorable="d"
        Title="Add_New_Person" Height="800" Width="800" Loaded="Add_New_Person_OnLoaded">
    <Grid Name="Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
          <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="FirstName" Grid.Row="1" Grid.Column="0"></Label>
        <TextBox Name="txtFirstName" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"></TextBox>
        <Label Content="SirName" Grid.Row="2" Grid.Column="0"></Label>
        <TextBox Name="txtSirName" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"></TextBox>
        <Label Content="LastName" Grid.Row="3" Grid.Column="0"></Label>
        <TextBox Name="txtLastName" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"></TextBox>
        <Label Content="Gender" Grid.Row="4"></Label>
        <ComboBox Name="cmbGender" Grid.Column="0" Grid.Row="4" DisplayMemberPath="gender" SelectedValue="{Binding Path = gender_id}" VerticalAlignment="Center" SelectionChanged="cmbGender_SelectionChanged"></ComboBox>
        <Label Content="Start Date" Grid.Row="5" Grid.Column="3"></Label>
        <DatePicker Name="dtpStart" Grid.Column="3" Grid.Row="5" VerticalAlignment="Center"></DatePicker>
        <Label Content="End Date" Grid.Row="6" Grid.Column="3"></Label>
        <DatePicker Name="dtpEnd" Grid.Column="3" Grid.Row="6" VerticalAlignment="Center"></DatePicker>
        <ComboBox Name="cmbDepartment" Grid.Column="3" Grid.Row="1" VerticalAlignment="Center" SelectionChanged="CmbDepartment_OnSelectionChanged"></ComboBox>
        <ComboBox Name="cmbFaculty" Grid.Column="3" Grid.Row="2" VerticalAlignment="Center" SelectionChanged="CmbFaculty_OnSelectionChanged"></ComboBox>
        <ComboBox Name="cmbUniversity" Grid.Column="3" Grid.Row="3" VerticalAlignment="Center" SelectionChanged="CmbUniversity_OnSelectionChanged"></ComboBox>
        <Label Content="University" Grid.Row="3" Grid.Column="3"></Label>
        <Label Content="Faculty" Grid.Row="2" Grid.Column="3"></Label>
        <Label Content="Department" Grid.Row="1" Grid.Column="3"></Label>
        <Label Content="EGN Type" Grid.Row="1" Grid.Column="2"></Label>
        <ComboBox Name="cmbEgnType" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" SelectionChanged="CmbEgnType_OnSelectionChanged"></ComboBox>
        <TextBox Name="txtEGN" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"></TextBox>
        <Label Content="EGN" Grid.Row="2" Grid.Column="2"></Label>

    </Grid>
</Window>
